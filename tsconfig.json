{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "jsx": "react",
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./lib/*.ts",
    "./Router/*.ts",
    "./practice/*.ts",
    "./public/*.ts",
    "./server/*.ts",
    "./src/*.ts"
  ]
}
